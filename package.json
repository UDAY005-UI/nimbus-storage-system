{
  "name": "nimbus",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,jsx,ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "start:dev": "turbo run start:dev",
    "prepare": "husky"
  },
  "lint-staged": {
      "**/*.{js,mjs,jsx,ts,tsx,md}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
